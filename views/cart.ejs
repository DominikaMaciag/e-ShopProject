<%- include ('ejs/header.ejs'); -%>
    <head>
        <script src="/public/javascripts/cart.js"></script>
        <!-- <script src="/controllers/shop.js"></script> -->
    </head>

    <div>
        <% if (cart === null || cart.products.length == 0) {%>
            <h1>Brak produktów w koszyku</h1>
        <% } else { %>

        <h1>Produkty w Twoim koszyku:</h1>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">nazwa produktu</th>
                        <th scope="col">cena</th>
                        <th scope="col">ilość</th>
                        <th scope="col">usuń</th>
                    </tr>
                </thead>
                <tbody>
                <% for (let i = 0; i < cart.products.length; i++){
                    let product = cart.products[i];
                %>
                    <tr>
                        <th scope="row"><%= i+1%></th>
                        <td><%= product.title%></td>
                        <td><%= product.price%> zł</td>
                        <td><%= product.qty%></td>
                    </tr>
                <% } %>
                <tr>
                    <td>W sumie:</td>
                    <td colspan="4"><%= cart.totalPrice%> zł</td>
                </tr>
                </tbody>
            </table>
        <% }%>
    </div>
<%- include ('ejs/footer.ejs'); -%>